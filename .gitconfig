	name = Kirk Chen

[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
	autocrlf = input

[color]
	ui = true

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	new = green bold
	old = red bold
	whitespace = red reverse

[diff]
  tool = vimdiff

[difftool]
  prompt = false
  trustExitCode = true

[interactive]
  diffFilter = diff-so-fancy --patch
[init]
	defaultBranch = main
